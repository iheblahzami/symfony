{% extends 'base.html.twig' %}

{% block title %}Budget{% endblock %}

{% block body %}
    <h1>Budget</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ budget.id }}</td>
            </tr>
            <tr>
                <th>MontantTotal</th>
                <td>{{ budget.montant }}</td>
            </tr>
            {# Check if budget.categorie is not null before displaying category information #}
            {% if budget.categorie is not null %}
                <tr>
                    <th>Categorie</th>
                    <td>{{ budget.categorie.nomCategorie }}</td>
                </tr>
            {% else %}
                <tr>
                    <th>Categorie</th>
                    <td>No category associated with this budget.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_budget_index') }}">back to list</a>

    <a href="{{ path('app_budget_edit', {'id': budget.id}) }}">edit</a>

    {{ include('budget/_delete_form.html.twig') }}
{% endblock %}
