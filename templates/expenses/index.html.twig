{% extends 'base.html.twig' %}

{% block title %}Expenses index{% endblock %}

{% block body %}
    <h1>Expenses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant Total</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.montantTotal }}</td>
                <td>
                    <a href="{{ path('app_expenses_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('app_expenses_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
